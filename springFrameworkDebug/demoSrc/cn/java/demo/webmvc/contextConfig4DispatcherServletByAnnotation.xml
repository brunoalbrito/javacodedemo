<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="    
    http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd    
    http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="handlerMapping1" class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
	    <property  name="rootHandler">
	    	<bean class="cn.java.demo.webmvc.bean.handler.RootHandler" /><!-- 根处理器 -->
	    </property>
	    <property  name="defaultHandler"> 
	    	<bean class="cn.java.demo.webmvc.bean.handler.DefaultHandler" /> <!-- 默认处理器 -->
	    </property>
	    <property  name="interceptors"><!-- 拦截器 -->
	        <array merge="false">
			 	<bean class="cn.java.demo.webmvc.bean.interceptor.HandlerInterceptor0" />
    			<bean class="cn.java.demo.webmvc.bean.interceptor.WebRequestInterceptor0" />
		 	</array>
	    </property>
    </bean>
    
    <bean id="viewResolver0" class="org.springframework.web.servlet.view.InternalResourceViewResolver" order="0">
    </bean>
    
    <bean id="viewResolver0" class="org.springframework.web.servlet.view.InternalResourceViewResolver" order="0">
    </bean>
    <bean id="viewResolver1" class="org.springframework.web.servlet.view.InternalResourceViewResolver" order="1" />
        
        
   
    
</beans>