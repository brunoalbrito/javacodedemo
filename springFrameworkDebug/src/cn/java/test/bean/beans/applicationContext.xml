<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="    
    http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd    
    http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- id 表示你这个组件的名字，class表示组件类 -->
	<bean id="hello" class="cn.java.test.impl.HelloImpl" />
	
	
	<bean id="bean1" name="bean1Alias0" class="cn.java.test.bean.Bean1" />
	<bean id="bean2" name="bean2Alias0,bean2Alias1" class="cn.java.test.bean.Bean2" />

	<bean id="bean3_0Factory" class="cn.java.test.bean.Bean3Factory" />
	<bean id="bean3_1" factory-bean="bean3Factory" factory-method="getBean3"/>
	<bean id="bean3_2" factory-bean="bean3Factory" factory-method="getBean3">
    	<constructor-arg index="0" type="java.lang.Integer" name="userid" />
    	<constructor-arg index="0" type="java.lang.String"  name="username" />
    	<constructor-arg index="0" type="cn.java.test.bean.Bean2"  name="bean2" ref="bean2" />
    </bean>
</beans>  